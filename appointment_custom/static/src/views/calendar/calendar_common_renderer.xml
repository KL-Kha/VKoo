<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">

    <t t-name="appointment_custom.CalendarCommonRendererHeader">
        <t t-if="group_by and resource">
            <span class="o_cw_day_name" t-esc="resource.name"/>
        </t>
        <t t-else="">
            <span class="o_cw_day_name" t-esc="scale == 'day' ? weekdayLong : weekdayShort "/> <span t-if="scale != 'month'" class="fc-day-number o_cw_day_number" t-esc="day"/>
        </t>
    </t>

</templates>