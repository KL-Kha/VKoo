<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_product_kits" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_settings']" position="after">
                <h2>Product Kits</h2>
                <div class="row mt16 o_settings_container" id="anfrage_modus">
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="anfrage_modus_mode">
                        <div class="o_setting_left_pane">
                            <field name="x_anfrage_modus_mode"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="x_anfrage_modus_mode"/>
                            <span title="Values set here are website-specific."/>
                            <div class="text-muted">
                                Anfrage Modus / RQF Mode
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>